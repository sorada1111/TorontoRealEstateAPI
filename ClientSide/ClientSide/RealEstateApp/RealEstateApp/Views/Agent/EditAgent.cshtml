@model Agent
@{
    var currentUsername = Context.Session.GetString("Username");
    var currentUserId = Context.Session.GetString("UserId");
    var userRole = Context.Session.GetString("UserRole");
    ViewData["Title"] = "Edit Agent";
    var propertyId = ViewBag.PropertyId as string;
    var agentId = Model.AgentId;
}
@if (currentUserId != null && currentUsername != null)
{
    <h2>@ViewData["Title"]</h2>
    <form asp-action="EditAgent" method="post">
        <input type="hidden" name="propertyId" value="@propertyId" />
        <input type="hidden" name="agentId" value="@agentId" />

        <div class="form-group">
            <label asp-for="AgentName">Agent Name</label>
            <input asp-for="AgentName" class="form-control" />
            <span asp-validation-for="AgentName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AgentCompanyName">Agent Company Name</label>
            <input asp-for="AgentCompanyName" class="form-control" />
            <span asp-validation-for="AgentCompanyName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AgentPhone">Agent Phone</label>
            <input asp-for="AgentPhone" class="form-control" />
            <span asp-validation-for="AgentPhone" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
}
else
{
    <div class="alert alert-warning" role="alert">
        You must be logged in to edit agent.
    </div>
}